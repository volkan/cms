<% @content_translations.each do |content_translation| %>
  <tr>
    <td><%= content_translation.language_id %></td>
    <td><%= content_translation.content_id %></td>
    <td><%= content_translation.field_name %></td>
    <td><%= content_translation.content %></td>
    <td><%= content_translation.status %></td>
    <td><%= link_to 'Show', content_translation %></td>
    <td><%= link_to 'Edit', edit_content_translation_path(content_translation) %></td>
