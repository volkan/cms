<h1>Listing sites</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Title</th>
    <th>Url</th>
    <th>Folder name</th>
    <th>Host name</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.parent_id %></td>
    <td><%= site.title %></td>
    <td><%= site.url %></td>
    <td><%= site.folder_name %></td>
    <td><%= site.host_name %></td>
    <td><%= site.status %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

