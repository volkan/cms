<h1>Listing contents</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Parent</th>
    <th>Category</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.site_id %></td>
    <td><%= content.parent_id %></td>
    <td><%= content.category_id %></td>
    <td><%= content.title %></td>
    <td><%= content.description %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

